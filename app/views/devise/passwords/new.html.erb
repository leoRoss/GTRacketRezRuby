<div align="center" style="background-color:#ffd700;border:2px solid;width:30%;margin:0 auto">
<h2>Forgot your password?</h2>
</div>
<div align = "center" style="background-color:#f5f5dc;color:#000000;border:2px solid;width:30%;margin:0 auto">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
</div>