  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= link_to 'New Reservation', '#reservationModal', 'data-toggle' => 'modal', :class => "btn btn-primary btn-lg" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="calendar" id="today"></div>
    </div>
    <div class="col-md-4">
      <div class="calendar" id="tomorrow"></div>
    </div>
    <div class="col-md-4">
      <div class="calendar" id="dayafter"></div>
    </div>
  </div>
</div>