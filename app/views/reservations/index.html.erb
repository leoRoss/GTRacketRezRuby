<script type="text/javascript">
  current_user = <%= current_user.try(:id) %>
</script>

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">CRC Reservations</a>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=current_user.try(:name)%> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <%= link_to 'Logout', destroy_user_session_path, :method => :delete%>
              <br>
              <%= link_to 'Edit Account', edit_user_registration_path %>
            </ul>  
          </li>
        <% else %>
          <%= link_to 'Login',new_user_session_path%> OR <%= link_to 'Sign Up', new_user_registration_path %>
        <% end %>
      </ul>
